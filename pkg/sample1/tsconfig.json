{
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    }
}
